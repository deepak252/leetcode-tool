{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.1",

  "icons": {
    "32": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
